<h1>Products</h1>
 
<% @products.each do |product| %>

	<div class = 'index_display'>
		<div class = "photo">
			<a href="<%= product_path(product) %>"><img src="<%= "#{product.photo}" %>"></a>
		</div>
		<p class="info">
			Product: <%= link_to product.name, product_path(product) %>
			<br>  
			Price: <%= number_to_currency(product.price) %>
			<br>
			Category: <%= product.category[:category_name] if product.category  %>
			<br>
			Description: 
			<%= product[:description] %>
		</p>
		
	</div>

	<br>	
<% end %>	