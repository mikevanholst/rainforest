	<div class = "nav">
		<ul>
			<li><%= link_to "Edit", "/products/#{@product.id}/edit" %> </li>
			<li ><%= link_to 'Delete', @picture, :confirm => "Are you sure you want to delete this product?", :method => :delete  %> </li>
			<li><%= link_to 'Products', products_path %> </li>
		</ul>
	</div>
		
<div class = 'show_display'>
	<div class = 'show_info'>
		<h1><%= @product[:name] %></h1>
		<h4> Price: <%= number_to_currency(@product.price) %></h4>
		<p> Category: <%= @product.category[:category_name] if  @product.category  %></p>

		<p>Description:<br> <%= @product[:description]  %></p>
		
		<p>Tagged as:<%  @product.tags.each do |tag| %>
			<%= tag.descriptor + ", " %>
		<% end %></p> 
	</div>	
	<div class = "show_photo">
			<img src="<%= "#{@product.photo}" %>">
	</div>
</div>

<div class = "reviews">
  <h3>Reviews for <%= @product.name %></h3>
	<% if current_user %>
		<%= render '/reviews/new_review' %>	
		<%= render '/reviews/reviews' %>
	
	<% else %>	
		<p>Please <%= link_to "log in", new_session_path %> to add a review.</p>
	<% end %>
</div>
	


